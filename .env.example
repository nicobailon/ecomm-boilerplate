# MongoDB
MONGO_URI=mongodb://localhost:27017/ecommerce

# Redis (Upstash)
UPSTASH_REDIS_URL=redis://localhost:6379

# JWT Secrets
ACCESS_TOKEN_SECRET=your-access-token-secret-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# UploadThing (replaces Cloudinary)
UPLOADTHING_TOKEN=your-uploadthing-token

# Stripe
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Server
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# Resend Email Configuration
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourstore.com
RESEND_FROM_NAME=Your Store Name
# IMPORTANT: Email sending requires BOTH conditions:
# 1. RESEND_API_KEY must be valid
# 2. EMAIL_ENABLED must be set to 'true'
# This dual requirement prevents accidental email sending in dev/test environments
EMAIL_ENABLED=false
SUPPORT_EMAIL=support@yourstore.com

# Webhook Configuration (Optional)
# WEBHOOK_RATE_LIMIT=1000  # Requests per minute (default: 1000)
# WEBHOOK_TIMEOUT=10000     # Processing timeout in ms (default: 10000)
# WEBHOOK_MAX_RETRIES=3     # Max retry attempts (default: 3)

# Queue Monitoring and Alerts (Optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# ALERT_EMAIL=alerts@yourstore.com
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# DATADOG_API_KEY=your-datadog-api-key
# MONITORING_ENABLED=true   # Enable monitoring integrations