		"deactivate-coupon": "tsx backend/scripts/deactivate-coupon.ts",
		"migrate-appliedCoupon": "tsx backend/scripts/migrate-appliedCoupon.ts",
		"generate-slugs": "tsx backend/scripts/generate-slugs.ts",
		"migrate-product-slugs": "tsx backend/scripts/migrate-product-slugs.ts",
		"migrate:variant-labels": "tsx backend/scripts/migrate-variant-label.ts",
		"revert:variant-labels": "tsx backend/scripts/revert-variant-label.ts",
		"migrate:product-media": "tsx backend/scripts/migrate-product-media.ts",
		"verify:db-indexes": "echo 'Database index verification requires a running MongoDB instance. See backend/docs/database-performance-optimizations.md for details.'"
	},
	"keywords": [],
	"author": "",
	"type": "module",
	"license": "ISC",
