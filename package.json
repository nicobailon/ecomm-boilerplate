		"dev": "tsx watch backend/server.ts",
		"build": "tsc && npm run build:frontend",
		"start": "tsx backend/server.ts",
		"start:prod": "node dist/server.js",
		"typecheck": "tsc --noEmit",
		"lint": "eslint backend --ext .ts,.js",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"test:watch": "vitest --watch",
		"build:frontend": "npm install --prefix frontend && npm run build --prefix frontend",
		"dev:all": "concurrently \"npm run dev\" \"npm run dev --prefix frontend\"",
		"make-admin": "tsx backend/scripts/make-admin.ts",
		"list-users": "tsx backend/scripts/list-users.ts"
	},
