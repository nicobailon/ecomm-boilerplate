		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^7.5.0",
		"helmet": "^8.1.0",
		"ioredis": "^5.4.1",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.5.3",
		"stripe": "^16.8.0",
		"uploadthing": "^7.7.2"
	},
	"devDependencies": {
